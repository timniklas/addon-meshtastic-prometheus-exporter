[Unit]
Description=Meshtastic metrics exporter
After=network-online.target
Wants=network-online.target systemd-networkd-wait-online.service

StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
Restart=on-failure
RestartSec=5s

ExecStart=/usr/bin/python3 /path/to/mesh_exporter.py localhost

[Install]
WantedBy=multi-user.target
